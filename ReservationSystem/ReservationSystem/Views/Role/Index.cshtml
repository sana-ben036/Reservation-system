@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "ReservationSYS  | Roles";
}

<div class="my-2 text-left col-12">
    <h2> List of Roles </h2>
    <hr />
</div>


@if (Model.Any())
{
<table class="table table-hover text-center my-5">
    <thead class="text-white" style="background-color:#44426B">
        <tr>

            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (IdentityRole role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>

                    <td>
                        <form method="post" asp-action="Delete" asp-controller="Role" asp-route-id="@role.Id">
                            <a class="btn btn-primary text-white btn-sm" asp-action="Edit" asp-controller="Role" asp-route-id="@role.Id">Update</a>
                            <button type="submit" class="btn btn-dark btn-sm" onclick="return confirm('Are you sure ??')">Delete</button>
                        </form>

                    </td>
                </tr>

            }
        }

    </tbody>
</table>

}
else
{
    <div class=" col-12 my-5">
        
        <div class="card">
            <div class="card-header">
                No roles created yet

            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Use the button bellow to create role
                </h5>
            </div>
        </div>
    </div>

}

<div class="my-5 text-left">
    <a  asp-action="Create">Add New Role</a> |
    <a  asp-action="Index" asp-controller="Role">Back to Home</a>
</div>

<div class=" my-3 text-danger" asp-validation-summary="All"></div>

