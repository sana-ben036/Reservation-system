@model AppUser

@{

    ViewBag.Title = "ReservationSYS | Edit Account ";
}


<div class="my-2 text-left col-12">
    <h2> Edit Account Details</h2>
    <hr />
</div>

<form class="mx-lg-auto my-5 w-50" asp-action="EditAccount" asp-controller="Account" method="post">
    <input hidden asp-for="Id">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input type="text" class="form-control" asp-for="FirstName">
        <span asp-validation-for="FirstName" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input type="text" class="form-control" asp-for="LastName">
        <span asp-validation-for="LastName" class="small text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
