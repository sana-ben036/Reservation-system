@model ReservationType

@{

    ViewBag.Title = "ReservationSYS | New Type";

}


<div class="my-2 text-left col-12">
    <h2> Create New Type</h2>
    <hr />
</div>

<form class="mx-lg-auto my-5 w-50" asp-action="Create" asp-controller="ReservationType" method="post">
    <input hidden class="form-control" type="datetime" asp-for="Date" value="@DateTime.Now">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberA"></label>
        <input type="number" class="form-control" asp-for="NumberA">
        <span asp-validation-for="NumberA" class="small text-danger"></span>
    </div>
  
    <button type="submit" class="btn btn-primary">Add Type</button>
</form>
