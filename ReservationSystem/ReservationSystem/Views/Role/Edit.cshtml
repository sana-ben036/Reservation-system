@model EditRoleViewModel

@{

    ViewBag.Title = "ReservationSYS  | Edit Role";

}

<div class="my-2 text-left col-12">
    <h2> Edit Role Details </h2>
    <hr />
</div>

<form class="mx-lg-auto my-5 w-50" method="post">
    <input class="form-control" hidden asp-for="Id">

    <div class="form-group">
        <label asp-for="RoleName"></label>
        <input class="form-control" asp-for="RoleName">
        <span asp-validation-for="RoleName" class="small text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>

    <div>
        <div class="card" style=" margin:auto">
            <div class="card-body text-center">
                <h5 class="card-title">List Users</h5>

                @if (Model.Users.Count == 0)
                {
                    <p class="card-text">Any Users</p>
                }
                else
                {
                    <p class="card-text">
                        @foreach (string user in Model.Users)
                        {
                            @user <br />
                        }
                    </p>
                }
                <div>
                    <a asp-action="EditUsersRole" asp-route-RoleId="@Model.Id">Edit Users</a> |
                    <a asp-action="Index">Back to list</a>
                </div>
            </div>
        </div>
    </div>
    <div class="text text-danger" asp-validation-summary="All"></div>
</form>


